@model NuorisoTaloKortti.Models.Kayttajat

@{
    ViewBag.Title = "PsswordChange";
}
<center>
    <h2>Salasanan vaihtaminen</h2>

    <div class="form-horizontal">
        <table class="table table-striped table-bordered">
            <tr style="background-color: aqua">
                <th>Nimi</th>
                <th>@Html.DisplayNameFor(model => model.Kayttajanimi)</th>
                <th>@Html.DisplayNameFor(model => model.Salasana)</th>
                <th></th>
            </tr>

            }

        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.KayttajaId)
            @Html.HiddenFor(model => model.Kayttajanimi)
            @Html.HiddenFor(model => model.Salasana)

            <div>
                <h3>
                    Käyttäjä : @Model.Kayttajanimi
                </h3>
            </div>
            if (Model.LoginErrorMessage != "Salasana Vaihdettu")
            {

                <div class="row col-md-3">
                    <div class="form-group has-success">
                        <h5>
                            Uusi Salasana
                        </h5>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.uusiSalasana, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.uusiSalasana, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <h5>
                            Salasana uudestan
                        </h5>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ToistaSalasana, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.ToistaSalasana, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </div>
                </div>

            }


            <h3>
                <label class="text-danger">
                    @Html.DisplayFor(model => model.LoginErrorMessage)
                </label>
            </h3>
        }



        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {

        @Scripts.Render("~/bundles/jqueryval")
    }
</center>