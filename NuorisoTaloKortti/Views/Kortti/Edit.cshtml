@model NuorisoTaloKortti.Models.Nuoret

@{
    ViewBag.Title = "Edit";
}

<center>
    @using (Html.BeginForm("Edit", "Kortti", FormMethod.Post, new { encypte = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.NuoriId)

        <h5 class="card-title"> Sinun Kuvasi : @Model.Etunimi @Model.Sukunimi</h5>

            <div class="form-group">
                <div class="col-md-10">
                    @if (Model.Kuva != null)
                    {
                        var base64 = Convert.ToBase64String(Model.Kuva);
                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src='@imgsrc' style="max-width: 300px;" />
                    }
                    else
                    {
                        <img src="~/Kuvat/ukkkoKuva.jpg" style="max-height: 200px;" />
                    }
                </div>
            </div>
            <br />
            <form action="/" method="post"></form>
            <form method="post" enctype="multipart/form-data">
                <input type="file" name="image1"  />
                <br />
                <br />
                <input type="submit" value="Save" class="btn btn-success" />
            </form>
        </div>




    }
</center>